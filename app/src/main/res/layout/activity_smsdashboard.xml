<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="limited.it.planet.smsapp.activity.SMSDashboard">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_email_dashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/imgv_home"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_home"
                    />
                <TextView
                    android:id="@+id/txv_head_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMS"
                    android:textSize="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/btn_sms_dashboard"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Dashboard"
            android:background="#867772"
            style="@style/ButtonBorder.Accent"
            android:textColor="#FFFFFF"
            />
        <Button
            android:id="@+id/btn_new_campaign"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="160dp"
            android:text="New Campaign"

            android:background="#388E3C"
            style="@style/ButtonBorder.Accent"
            android:textColor="#FFFFFF"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/btn_pre_campaigns"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="All Campaign"
            android:background="#757575"
            style="@style/ButtonBorder.Accent"
            android:textColor="#FFFFFF"
            />

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
